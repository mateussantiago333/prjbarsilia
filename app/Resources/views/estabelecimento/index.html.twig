{% extends 'layout.html.twig' %}

{% block content %}
  <div class = "index_list">
    <div class="col-xs-8 col-xs-offset-2">
             <div class = "filters">
                <form action="#" method="get" id="searchForm" class="input-group">                  
                    <div class="input-group-btn search-panel">
                        <select name="search_cidade" id="search_param" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <option value="">Por cidade</option>
                            <option value="Asa Norte">Asa Norte</option>
                            <option value="Asa Sul">Asa Sul</option>
                            <option value="Gama">Gama</option>
                            <option value="Taguatinga">Taguatinga</option>
                            <option value="Brazlândia">Brazlândia</option>
                            <option value="Sobradinho">Sobradinho</option>
                            <option value="Planaltina">Planaltina</option>
                            <option value="Paranoá">Paranoá</option>
                            <option value="Núcleo Bandeirante">Núcleo Bandeirante</option>
                            <option value="Cruzeiro">Cruzeiro</option>
                            <option value="Guará">Guará</option>
                            <option value="Lago Sul">Lago Sul</option>
                            <option value="Lago Norte">Lago Norte</option>
                            <option value="Águas Claras">Águas Claras</option>
                        </select>
                        <select name="search_tipo" id="search_param" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <option value="">Por tipo</option>
                            <option value="Bar">Bar</option>
                            <option value="Restaurante">Restaurante</option>
                            <option value="Boteco">Boteco</option>
                            <option value="Chopperia">Chopperia</option>
                            <option value="Casa de shows">Casa de shows</option>
                        </select>
                    </div>
                    <input type="text" class="form-control" name="search_all" placeholder="Busque algo...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                           Filtrar
                        </button>
                    </span>
                </form><!-- end form -->     
              </div>
            </div>
</div>

  <div class="container">
    <div class="row">
    <div class="well">
        <h1 class="text-center">Lista de estabelecimentos</h1>
        <div class="list-group">
          {% for estabelecimento in estabelecimentos %}
          <a href="{{ path('estabelecimento_show', { 'id': estabelecimento.id }) }}" class="list-group-item">
                <div class="media col-md-3">
                    <figure class="pull-left">
                        <img class="media-object img-rounded img-responsive" src="{{ estabelecimento.url_img }}" width="350" height="250" alt="placehold.it/350x250" >
                    </figure>
                </div>
                <div class="col-md-6">
                    <h4 class="list-group-item-heading"> {{ estabelecimento.nome_estabelecimento }} </h4>
                    <p class="list-group-item-text">
                      <b>Tipo de estabelecimento: </b> {{ estabelecimento.tipo_estabelecimento }}<br/>
                      <b>Cidade: </b> {{ estabelecimento.cidade }}<br/>
                      <b>Descrição:</b><br/>
                     {{ estabelecimento.descricao }}</p>
                </div>
                <div class="col-md-3 text-center">
                    <h4> Média de votos: {{ estabelecimento.nota_media|rating }}</h4>
                    
                    <button type="button" class="btn btn-primary btn-lg btn-block">Vote agora!</button>
                    <div class="stars">
                        <h4> {{ estabelecimento.qtd_notas }} voto(s)</h4>
                    </div>
                </div>
          </a>
          {% endfor %}
        </div>
        </div>
  </div>
</div>
{% endblock %}
