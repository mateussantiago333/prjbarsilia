{% extends 'layout.html.twig' %}

{% block content %}
<div id = "estabelecimento_show">
<section id="container">
    <div class="wrap-container">
    <!-----------------Content-Box-------------------->

    <div id = "estabelecimento_show">
    <article class="single-post zerogrid">
        <div class="row wrap-post"><!--Start Box-->
        <div class="entry-header">
            <h1>{{ estabelecimento.nomeestabelecimento }}</h1>
            <h2>Nota média do estabelecimento: {{ media|rating }}</h2>
            <img src="{{ estabelecimento.urlimg }}" id = "bar_img" class="img-responsive" alt="">
        </div>
    <div class="entry-content">
        <div class="excerpt">        
                <h2>Endereco</h2>
                <p>{{ estabelecimento.endereco }}</p>

                <h2>Cidade</h2>
                <p>{{ estabelecimento.cidade }}</p>
            
            
                <h2>Tipo de estabelecimento</h2>
                <p>{{ estabelecimento.tipoestabelecimento }}</p>
            
            
            
                <h2>Email</h2>
                <p>{{ estabelecimento.email }}</p>
            
            
                <h2>Cnpj</h2>
                <p>{{ estabelecimento.cnpj }}</p>
            
            
                <h2>Telefone</h2>
                <p>{{ estabelecimento.telefone }}</p>
            
            
                <h2>Descrição</h2>
                <p>{{ estabelecimento.descricao }}</p>

                <div id="create_comment">
                <h1>Adicione o seu comentário</h1>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <input type="submit" value="Comentar" />
                    {{ form_end(form) }}
                </div>

                {% if estabelecimento.comentario is not empty %}
                <div id="comments">
                    <h1>Comentarios para este estabelecimento</h1>
                    {% for comentario in estabelecimento.comentario %}
                            <table>
                                <tr>
                                <td><h2><b>Autor: </b>{{ comentario.autor }}</h2> <h2><b>Nota: </b>
                                {{ comentario.nota|rating }}</h2></td>
                                </tr>
                                <tr>
                                <td><p><h2><b>Comentário:</b></h2>{{ comentario.getTextoComentario() }}</p>
                                </br></td>
                                </tr>                       
                            </table>
                    {% endfor %}
                </div>
                {% endif %}

            {% if estabelecimento.evento is not empty %}
                <div class="row wrap-post"><!--Start Box-->
                <div class="entry-header">
                <div class="entry-content">
                    <h1>Eventos deste estabelecimento: </h1>
                            <div class="excerpt">
                                 <div class="row">
                                {% for evento in eventos %}
                                <div class ="eventos_estabelecimento">
                                  <div class="col-sm-6 col-md-4">
                                    <div class="thumbnail">
                                      <img src="{{ evento.img_evento }}" alt="ICON">
                                      <div class="caption">
                                        <h2>{{ evento.nome_evento }}</h2>
                                          <h3>Data:</h3>{% if evento.data_evento %}{{ evento.data_evento|date('d-m-Y H:i:s') }}{% endif %}<br/>
                                          <h3>Nota média: </h3> {{ evento.nota_evento|rating }}
                                          <h3>Descrição do evento:</h3>
                                          <p>{{ evento.descricao_evento }}</p>
                                        <p><a href="{{ path('evento_show', { 'id': evento.id }) }}"
                                         class="btn btn-primary" role="button">Veja mais...</a>
                                           <!--<a href="#" class="btn btn-default" role="button">Button</a></p>-->
                                      </div>
                                    </div>
                                  </div>
                                  </div>
                                  {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
